<% provide :title, t("common.all_posts") %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-success">
      <table class="table table-striped table-hover table-bordered">
        <thead class="">
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".user_name" %></th>
            <th><%= t ".mode" %></th>
            <th><%= t ".arena" %></th>
            <th><%= t ".category_name" %></th>
            <th><%= t ".title" %></th>
            <th><%= t ".max_price" %></th>
            <th><%= t ".min_price" %></th>
            <th><%= t ".created_at" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each_with_index do |post, index| %>
          <tr>
            <td><%= increase_one index %></td>
            <td><%= post.user_name %></td>
            <td><%= t ".#{post.mode}" %></td>
            <td><%= t ".#{post.arena}" %></td>
            <td><%= post.category_name %></td>
            <td><%= link_to post.title, "#" %></td>
            <td><%= format_price post.min_price %></td>
            <td><%= format_price post.max_price %></td>
            <td><%= post.created_at.strftime Settings.admin.post.full_time_date %></td>
            <td><%= t ".#{post.status}" %></td>
            <td>
              <%= link_to t(".approve"), "#", class: "btn btn-success form-button", disabled: post.approved? %>
              <%= link_to t(".rejecte"), "#", class: "btn btn-danger form-button", disabled: post.rejected? %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12 text-center">
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
