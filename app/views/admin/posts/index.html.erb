<% provide :title, t("common.all_posts") %>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-success">
      <table class="table table-striped table-hover table-bordered">
        <thead class="">
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".user_name" %></th>
            <th><%= t ".mode" %></th>
            <th><%= t ".arena" %></th>
            <th><%= t ".category_name" %></th>
            <th><%= t ".title" %></th>
            <th><%= t ".max_price" %></th>
            <th><%= t ".min_price" %></th>
            <th><%= t ".created_at" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12 text-center">
      <%= paginate @posts, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
