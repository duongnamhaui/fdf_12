<% provide :title, t(".page_title") %>
<div class="common">
  <div class="modal fade shop-request-modal" tabindex="-1" role="dialog"
    aria-labelledby="mySmallModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header modal-message">

        </div>
        <div class="modal-footer">
          <button class="btn btn-primary width-80 btn-ok">
            <%= t "common.btn_ok" %>
          </button>
          <button class="btn btn-primary width-80" data-dismiss="modal">
            <%= t "common.btn_cancel" %>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <h1 class="text-center title"><%= t ".title" %></h1>
  </div>
  <div class="row alert" role="alert">

  </div>
  <div class="row margin-top-50">
    <div class="col-lg-12">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".owner" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".cover_image" %></th>
            <th><%= t ".avatar" %></th>
            <th><%= t ".requested_at" %></th>
            <th><%= t ".approve" %></th>
            <th><%= t ".reject" %></th>
          </tr>
        </thead>
        <tbody>
          <% @shops.each_with_index do |shop, index|  %>
            <tr>
              <td><%= increase_one index %></td>
              <td><%= shop.name %></td>
              <td><%= shop.owner_name %></td>
              <td><%= shop.description %></td>
              <td>
                <span class="btn btn-warning width">
                  <%= shop.status %>
                </span>
              </td>
              <td>

              </td>
              <td>

              </td>
              <td><%= l shop.created_at, format: :short_date %></td>
              <td>
                <button class="btn btn-success width-80" data-toggle="modal"
                  onclick="updateShopRequest(this,
                    '<%= t ".approve_confirm", user: shop.owner_name, shop: shop.name %>', '<%= shop.id %>', 1)">
                  <%= t ".approve" %>
                </button>
              </td>
              <td>
                <button class="btn btn-danger width-80" data-toggle="modal"
                  onclick="updateShopRequest(this,
                    '<%= t ".reject_confirm", user: shop.owner_name, shop: shop.name %>', '<%= shop.id %>', 3)">
                  <%= t ".reject" %>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
