<% provide :title, t("common.all_products") %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-success">
      <table class="table table-striped table-hover table-bordered">
        <thead class="">
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t "dashboard.shops.products.name" %></th>
            <th><%= t "dashboard.shops.products.image" %></th>
            <th><%= t "description" %></th>
            <th><%= t "dashboard.shops.products.price" %></th>
            <th><%= t "dashboard.shops.new.shop" %></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each_with_index do |product, index| %>
            <tr>
              <td><%= increase_one index %></td>
              <td><%= product.name %></td>
              <td>
                <div class="search-user-image">
                  <%= image_tag product.image.url, class: "thumbnail" %>
                </div>
              </td>
              <td><%= product.description %></td>
              <td><%= format_price product.price %></td>
              <td><%= product.shop.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12 text-center">
      <%= paginate @products, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
