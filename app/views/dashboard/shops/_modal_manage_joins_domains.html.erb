<div class="modal fade modal-request-shop-domain" data-shop-id="<%= shop.id %>"
  id="manage-domain-of-shop-<%= shop.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal_header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title modal_text_header"><%= shop.name %></h4>
      </div>
      <div class="modal-body">
        <div>
          <table id="domain-table"
            class="table table-striped table-hovertable-bordered manage-domain-of-shop">
            <thead>
            <tr>
              <th><%= t "request_shop.domain_name" %></th>
              <th><%= t "members" %></th>
              <th><%= t "shop" %></th>
              <th><%= t "products" %></th>
              <th><%= t "request_shop.status" %></th>
              <th class="last center">
                <%= t "request_shop.request_to_domain" %>
              </th>
            </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to  t("done"), "javascript:void(0)", "data-dismiss": "modal",
          class: "btn btn_add_to_cart btn-add padding-left-for-button" %>
      </div>
    </div>
  </div>
</div>
