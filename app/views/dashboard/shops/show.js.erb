<% if @is_list_item == "list_item" %>
  <% if @type_search %>
    $('#list-shop-optional-products').html('<%= j render @products %>');
  <% else %>
    $('#list-shop-optional-products').append('<%= j render @products %>');
  <% end %>
  <% if @products.last_page? %>
    $('.load-more-optional-products').hide();
  <% else %>
    $('.load-more-optional-products')
      .html('<%= j link_to_next_page(@products, t("view_more_products"), params: {type_search: false}) %>').show();
  <% end %>
<% else %>
  <% if @type_search %>
    $('#list-shop-products').html('<%= j render @products %>');
  <% else %>
    $('#list-shop-products').append('<%= j render @products %>');
  <% end %>
  <% if @products.last_page? %>
    $('.load-more-products').hide();
  <% else %>
    $('.load-more-products')
      .html('<%= j link_to_next_page(@products, t("view_more_products"), params: {type_search: false}) %>').show();
  <% end %>
<% end %>
