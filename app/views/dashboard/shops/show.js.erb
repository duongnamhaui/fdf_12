$(document).ready(function() {
  $('#list-shop-products').append('<%= j render @products %>');
  <% if @products.last_page? %>
    $('.load-more-products').hide();
  <% else %>
    $('.load-more-products')
      .html('<%= j link_to_next_page(@products, t("view_more_products")) %>');
  <% end %>
});
