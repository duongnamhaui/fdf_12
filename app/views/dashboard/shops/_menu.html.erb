<div class="panel-body">
  <table class="table table-striped table-hover margin_0 center-table ">
    <thead>
      <tr>
        <th><%= t ".name" %></th>
        <th><%= t ".actions" %></th>
      </tr>
    </thead>
    <tbody id="list-shop-optional-products">
      <% menu.first.item.each do |item| %>
        <tr>
          <td><%= item %></td>
          <td>
            <%= link_to t("common.edit_button"), "#", remote: true,
              class: "btn btn-sm btn-primary" %>
            <%= link_to t("common.delete_button"), "#", class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
