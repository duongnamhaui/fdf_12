<% if products.first.is_list_item %>
  <div class="panel-body">
    <table class="table table-striped table-hover margin_0">
      <thead>
        <tr>
          <th><%= t ".name" %></th>
          <th><%= t ".actions" %></th>
        </tr>
      </thead>
      <tbody id="list-shop-optional-products">
        <%= render products %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="panel-body">
    <table class="table table-striped table-hover margin_0">
      <thead>
        <tr>
          <th><%= t ".image" %></th>
          <th><%= t ".name" %></th>
          <th><%= t "description" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".status" %></th>
          <th><%= t ".actions" %></th>
        </tr>
      </thead>
      <tbody id="list-shop-products">
        <%= render @products %>
      </tbody>
    </table>
  </div>
<% end %>
