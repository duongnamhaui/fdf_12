<% if @success %>
  $('#new-edit-product-modal').modal('hide');
  $('#list-shop-products').html('<%= j render @products%>');
  $.growl.notice({title: '<%= t "common.notifications" %>', message: '<%= t "flash.success.dashboard.edit_product" %>'});
<% else %>
  $.growl.error({title: '<%= t "common.notifications" %>', message: '<%= t "flash.danger.dashboard.edit_product" %>'});
<% end %>
