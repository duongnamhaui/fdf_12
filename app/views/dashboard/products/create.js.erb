<% if @success %>
  $('#new-edit-product-modal').modal('hide');
  $('#list-shop-products').html('<%= j render @products %>');
  $.growl.notice({title: '<%= t "common.notifications" %>', message: '<%= t "flash.success.dashboard.create_product" %>'});
<% else %>
  $.growl.error({title: '<%= t "common.notifications" %>', message: '<%= t "flash.danger.dashboard.create_product" %>'});
<% end %>
