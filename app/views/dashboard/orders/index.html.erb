<div class="packing_view">
  <h2 class="text-center"><%= t "dashboard.order.title" %></h2>
  <div class="row pt15">
    <div class="col-md-8 col-sm-8 col-xs-8 border_order_list col-md-8-resize">
      <div class="title modal-header header_title_order">
        <span class="order_header_text">
          <%= t "order_statistics.step1"%>
          <div class="title_button">
            <span class="glyphicon glyphicon-ok-sign btn_accepted"></span>
            <%= link_to t("view_order_new.accepted_all"), dashboard_shop_order_product_path(
              type: Settings.type_update_all_orders, id: 0,
              status: Settings.filter_status_order.accepted), method: :put,
              class: "btn_accepted" %> |
            <%= link_to t("view_order_new.rejected_all"), dashboard_shop_order_product_path(
              type: Settings.type_update_all_orders, id: 0,
              status: Settings.filter_status_order.rejected), method: :put,
              class: "btn_rejected" %>
            <span class="glyphicon glyphicon-remove-sign btn_rejected"></span>
          </div>
        </span>
      </div>
      <div class="filter-order-box">
        <div class="filter-order-title"><%= t "filter_order" %></div>
        <div class="filter-order-by-domain text-center">
          <div>
            <%= t "select_domain" %>
            <%= select_tag "filter-order-manager",
              options_for_select(shop_domain_select @shop),
              include_blank: t("all_domains"),
              class: "filter-order-manager form-control inline" %>
            <span class="search_user_order"><%= t "search_user" %></span>
            <%= text_field_tag :order_by_user, nil,
              placeholder: t("name_or_email"), class: "form-control inline" %>
          </div>
          <div>
            <% Settings.filter_status_order.each do |key, value| %>
              <%= label_tag "status_#{value}", class: "radio-inline" do %>
                <%= radio_button_tag :status, value, nil,
                  class: "manage-order-status" %>
                <%= t "all_status.#{value}" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="body-1">
        <input type="hidden" value = "<%= @shop.id %>" id="shop-id"
          data-rej="<%= t "all_status.rejected" %>"
          data-acc="<%= t "all_status.accepted" %>">
          <div id="dashboard-list-order"><%= render @orders %></div>
      </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-4">
      <div class="border_order_list">
        <div class="title modal-header header_title_order">
          <span class="order_header_text">
            <%= t "order_statistics.step2"%>
            <div class="title_button">
              <span class="glyphicon glyphicon-gift btn_done"></span>
              <%= link_to t("view_order_new.packing_order"),
                dashboard_shop_order_products_path,
                class: "btn_done single-action", value: "rejected" %>
            </div>
          </span>
        </div>
        <div class="body-2">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t "oder.name" %></th>
                <th class="center"><%= t "oder.quantity" %></th>
                <th class="right"><%= t "oder.price" %></th>
              </tr>
            </thead>
            <tbody id="list_packing">
              <%= render partial: "dashboard/orders/product_packing_item",
                collection: @list_products_packing, as: :item %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="border_order_list">
        <div class="body-3">
          <table class="info_total_packing">
            <tbody id="bill-packing">
              <%= render partial: "dashboard/orders/product_packing_bill",
                locals: {bill: @list_products_packing} %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
