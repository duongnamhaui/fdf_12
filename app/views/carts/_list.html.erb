<div class="cart-item-show" data-id="<%= @cart.domain_id %>">
  <% @cart_group.each do |cart| %>
    <div class="margin-top-50 border-top-shop">
      <span class="top-shop-product">
        <%= t "cart_of_shop", name: cart[:items].first.product.shop_name %>
      </span>
      <span><span class="border-top-shop-product"></span></span>
    </div>
    <br>
    <div class="panel-body padding-0">
      <div class="col-md-12">
        <% cart[:items].each do |item| %>
          <div class="col-md-3 border_item_cart">
            <%= image_tag item.product.image.url,
              class: "image-shop cart_view" %>
            <h4 class="media-heading margin_top_cart">
              <%= item.product.name %>
            </h4>
            <div class="hide_show">
              <div class = "content_item_cart">
                <div class="media">
                  <div class="media-body">
                    <span class="text-success"><strong></strong></span>
                  </div>
                </div>
                <table class="table table-hover not_padding_bot">
                  <thead>
                    <tr>
                      <th><%= t "cart.quantity" %></th>
                      <th class="text-center"><%= t "cart.price" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="col-sm-2 col-md-2">
                        <%= item.quantity %>
                      </td>
                      <td class="col-sm-3 col-md-3 text-center">
                        <strong><%= format_price item.total_price %></strong></td>
                    </tr>
                    <tr>
                      <td>
                        <%= link_to "javascript:void(0)",
                          class: "pull-right update_notes_cart color_orange",
                          data: {id: item.product_id} do %>
                          <div>
                            <span class="glyphicon glyphicon-pencil action-padding"></span>
                            <strong><%= t "order_quick.note" %></strong>
                          </div>
                        <% end %>
                      </td>
                      <td>
                        <span class="item-right">
                          <%= link_to cart_path(item.product_id), method: :delete,
                            remote: true, class: "pull-right" do %>
                            <span class="glyphicon glyphicon-trash text-danger
                              action-padding">
                            </span>
                          <% end %>
                        </span>
                        <%= link_to edit_cart_path(id: item.product_id),
                          method: :get, remote: true, class: "pull-right" do %>
                          <span class="glyphicon glyphicon-minus-sign
                            text-primary action-padding"></span>
                        <% end %>
                        <%= link_to cart_path(id: item.product_id, edit: true), remote: true,
                          method: :put, class: "pull-right" do %>
                          <span class="glyphicon glyphicon-plus-sign text-success
                            action-padding"></span>
                        <% end %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="content_note_item_cart">
                <%= text_area_tag "", item.notes , class: "content_note" %>
                <%= link_to "javascript:void(0)", class: "pull-right" do %>
                  <span class="glyphicon glyphicon-remove-sign
                    text-primary action-padding content_note_cancel"></span>
                <% end %>
                <%= link_to "javascript:void(0)", data: {id: item.product_id},
                  class: "pull-right" do %>
                  <span class="glyphicon glyphicon-ok-sign text-success
                    action-padding content_note_save"></span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div>
        <hr>
        <div class="pull-right">
          <h3 class="total-cart h3_cart defaut-top">
            <b><%= t "dashboard.products.show.total" %>:</b>
            <%= format_price detail_price cart[:items]%>
          </h3>
        </div>
        <div class="defaut-top">
          <% if cart.present? %>
            <%= link_to t("order_this_shop"),
              domain_orders_path(@domain, shop_id: cart[:shop_id]),
              method: :post, class: "btn btn-warning btn-add margin_order" %>
          <% end %>
        </div>
        <br>
        <div class="line-end-silde"></div>
      </div>
    </div>
  <% end %>
</div>
<div class="render_js_after_ajax_rails"></div>
