$(document).ready(function() {
  <% if @products_shop.present? %>
    <% if @products_shop.first_page? %>
      $('.list-products').html('<%= j render @products_shop %>');
    <% else %>
      $('.list-products').append('<%= j render @products_shop %>');
    <% end %>
    <% if @products_shop.last_page? %>
      $('.load-more-products').hide();
    <% else %>
      $('.load-more-products').show();
      $('.load-more-products')
        .html('<%= j link_to_next_page(@products_shop, t("view_more_products")) %>');
    <% end %>
  <% else %>
    $('.list-products').empty();
    $('.load-more-products').hide();
    sweetAlert(I18n.t("dashboard.order_managers.index.not_products"), '', 'info');
  <% end %>

});
